<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorLight"
                android:elevation="@dimen/fragment_display_elevation"
                tools:context="com.koltinjo.cincilator.FragmentDisplay">

    <ImageButton
            android:id="@+id/fragment_display_imagebutton_delete"
            android:layout_width="@dimen/fragment_display_imagebutton"
            android:layout_height="@dimen/fragment_display_imagebutton"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_clear_black_48dp"
            style="@style/DisplayImageButton"/>

    <HorizontalScrollView
            android:id="@+id/fragment_display_horizontalscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/fragment_display_imagebutton_delete"
            android:layout_toRightOf="@id/fragment_display_imagebutton_delete"
            style="@style/DisplayScrollView">

        <TextView
                android:id="@+id/fragment_display_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                tools:text="927*89"
                style="@style/DisplayTextView"/>

    </HorizontalScrollView>

</RelativeLayout>